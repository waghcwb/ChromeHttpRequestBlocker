{
    "manifest_version": 2,
    "name": "HTTP Request Blocker (dev)",
    "short_name": "HTTPRequestBlocker",
    "version": "1.0",
    "description": "This extension blocks HTTP Request based on configurable URL patterns.",
    "author": "Cristian Lupa»ôcu",
    "homepage_url": "https://github.com/clupascu/ChromeHttpRequestBlocker",

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "http://*/*",
        "https://*/*",
        "storage"
    ],

    "icons": {
        "16": "dist/img/icon16.png",
        "48": "dist/img/icon48.png",
        "128": "dist/img/icon128.png"
    },

    "background": {
        "persistent": true,
        "scripts": ["dist/js/blocker.js"]
    },

    "browser_action": {
        "default_title": "HTTP Request Blocker",
        "default_icon": "dist/img/icon19.png",
        "default_popup": "popup.html"
    }
}